<ResultScreen>
    name: "results"

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Resultado"
            anchor_title: "center"
            md_bg_color: "white"
            elevation: .5
            specific_text_color: "black"
            left_action_items: [["arrow-left", lambda x: app.go_to_menu()]]
            right_action_items: [[""]]

        MDBoxLayout:
            id: results_container
            orientation: 'vertical'
            spacing: '7dp'
            padding: "10dp"

            MDLabel:
                id: batch_name
                text: "Lote: ..."

            MDLabel:
                id: additional_info
                text: "Informações: ..."

            MDLabel:
                id: color_scheme
                text: "Padrão de cor: ..."

            MDLabel:
                id: prediction_model
                text: "Modelo preditivo: ..."

            MDLabel:
                id: total_samples
                text: ""

            MDLabel:
                id: maturity_index
                text: "Indice de Maturação: 3.50"
