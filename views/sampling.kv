#:include views/elements.kv

MDFloatLayout:
    spacing: '10dp'
    ElementInput:
        id: nome_lote
        hint_text: "Nome do lote"
        helper_text: "Insira o nome do lote"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        required: False
    ElementInput:
        id: num_amostras
        hint_text: "Nº de Amostras"
        helper_text: "Insira o número de amostras"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        required: False
        input_filter: "int"
    ElementInput:
        id: padrao_cor
        hint_text: "Padrão de Cor"
        helper_text: "Escolha um padrão de cor"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        required: False
    ElementInput:
        id: modelo_preditivo
        hint_text: "Modelo Preditivo"
        helper_text: "Escolha um modelo preditivo"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        required: False
    ElementInput:
        id: informacoes
        hint_text: "Informações"
        helper_text: "Informações adicionais"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        required: False
        multiline: True
    ElementButton:
        text: "Subir imagens"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        size_hint: 0.3, 0.05
        on_release: app.root.get_screen('sampling').file_chooser()
    ElementButton:
        id: criar_lote
        text: "Criar Lote"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        size_hint: 0.3, 0.05
        on_release: app.root.get_screen('sampling').create_batch()
    ElementBackButton:
        text: "Voltar"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        size_hint: 0.1, 0.05
        on_release: app.root.current = "menu"
