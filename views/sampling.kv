<SamplingScreen>
    name: "sampling"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Nova Amostragem"
            anchor_title: "center"
            md_bg_color: "white"
            elevation: .5
            specific_text_color: "black"
            left_action_items: [["arrow-left", lambda x: app.go_to_menu()]]
            right_action_items: [[""]]

        MDBoxLayout:
            orientation: "vertical"
            spacing: '10dp'
            padding: '10dp'

            ElementInput:
                id: input_batch_name
                hint_text: "Nome do lote"
                helper_text: "Insira o nome do lote"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, 1
                required: False

            ElementInput:
                id: input_sample_count
                hint_text: "Nº de Amostras"
                helper_text: "Insira o número de amostras"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, 1
                required: False
                input_filter: "int"

            ElementInput:
                id: input_color_pattern
                hint_text: "Padrão de Cor"
                helper_text: "Escolha um padrão de cor"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, 1
                required: False

            ElementInput:
                id: input_predictive_model
                hint_text: "Modelo Preditivo"
                helper_text: "Escolha um modelo preditivo"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, 1
                required: False

            ElementInput:
                id: input_additional_info
                hint_text: "Informações"
                helper_text: "Informações adicionais"
                helper_text_mode: "on_focus"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, 1.5
                required: False
                multiline: True

            ElementButton:
                text: "Subir imagens"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, .5
                on_release: root.file_chooser()

            ElementButton:
                id: button_create_batch
                text: "Criar Lote"
                pos_hint: {"center_x": 0.5}
                size_hint: .9, .5
                on_release: root.create_batch()
